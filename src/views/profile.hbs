<link rel="stylesheet" href="/static/css/post.css">
<link rel="stylesheet" href="/static/css/user.css">

<!-- Outer Container -->
<div class="flex-row-container page">

    <div class="parent">
        <!-- User's Details (Profile picture, username, bio) -->
        <div class="flex-column-container user-details">
            <img id="profile-img" src="/static/profilepics/ {{#each user_details}}{{username}}{{/each}}.jpg">
            <div class="username" id="profile-username"> {{#each user_details}}@{{username}}{{/each}} </div>
            <div class="short-description">
                <p id="profile-bio"> {{#each user_details}}{{bio}}{{/each}} </p>
            </div>
            <button class="buttons" id="edit-profile">
                <p> Edit Profile </p>
            </button>
        </div>
    </div>
    
    <!-- User's Latest Posts/Comments -->
    <div class="flex-column-container latest">
        <div class="latest-buttons flex-row-container">
            <div class="latestposts active" id="latest-posts">
                <p> Latest Posts </p>
            </div>
            <div class="latestcomments" id="latest-comments">
                <p> Latest Comments </p>
            </div>
        </div>

        <!-- User's Latest Posts -->
        <div class="posts flex-column-container" id="latest-feed-posts">
            {{#each posts}}
            {{> post this}}
            {{/each}}
        </div>

        <!-- User's Latest Comments -->
        <div class="posts flex-column-container" id="latest-feed-comments">
            
        </div>
        
        <!-- "Show More" button -->
        <div class="show-more">
            <button class="buttons" id="profile-show-more">
                <p> Show More </p>
            </button>
        </div>
    </div>
    
</div>