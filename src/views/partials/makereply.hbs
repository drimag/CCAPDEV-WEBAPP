<form id="createReplyForm" name="createReplyForm" onsubmit="return false" autocomplete="off">
    <fieldset>
        <textarea name="new-reply" id="new-reply{{num}}" class="text new-reply" placeholder="Reply..." required></textarea> <br>
        <button id="createReply{{num}}" class="createReply" type="submit"> Submit </button>
        <button id="clearReply" type="reset"> Clear </button>
        
    </fieldset>
    
</form>