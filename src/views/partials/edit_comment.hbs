<form id="editCommentForm" class="editCommentForm" name="editCommentForm" autocomplete="off" onsubmit="return false">
    <fieldset>
        <textarea name="edit-textcomment" class="edit-textcomment" id="edit-textcomment{{commentNum}}" class="text">{{ comment }}</textarea>
        <button id="editComment{{commentNum}}" class="editComment" type="submit"> Submit </button>
        <button id="clearEditComment" type="reset"> Undo Changes </button>
    </fieldset>
</form>